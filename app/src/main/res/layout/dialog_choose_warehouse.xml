<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="10dp">

    <TextView
        android:id="@+id/dialogChooseWarehouseTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Warehouse:"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <Spinner
        android:id="@+id/dialogChooseWarehouseSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners_white"
        android:contentDescription="Warehouse"
        android:elevation="15dp"
        android:importantForAutofill="no"
        android:minHeight="48dp"
        android:padding="10dp"
        android:spinnerMode="dropdown"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/dialogChooseWarehouseSubmitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Submit"
        android:background="@drawable/button_navyblue"
        android:textColor="#ffffff"
        android:layout_gravity="end"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".views.AddItem">

    <!--    EditText for getting Proudct ID-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/edtAddMassLocationsStartingAisle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners_white"
            android:elevation="15dp"
            android:hint="Starting Aisle"
            android:importantForAutofill="no"
            android:inputType="number"
            android:minHeight="48dp"
            android:padding="10dp"
            app:layout_constraintEnd_toStartOf="@id/changeItemScrollableViewEnd"
            app:layout_constraintStart_toEndOf="@id/addItemScrollableViewStart"
            app:layout_constraintTop_toTopOf="@+id/changeItemScrollableViewTop" />

        <EditText
            android:id="@+id/edtAddMassLocationsEndingAisle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners_white"
            android:elevation="15dp"
            android:hint="Ending Aisle"
            android:importantForAutofill="no"
            android:inputType="number"
            android:minHeight="48dp"
            android:padding="10dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/edtAddMassLocationsStartingAisle"
            app:layout_constraintStart_toEndOf="@id/addItemScrollableViewStart"
            app:layout_constraintEnd_toStartOf="@id/changeItemScrollableViewEnd" />

        <!--    EditText for Product Description-->

        <EditText
            android:id="@+id/edtAddMassLocationsStartingRack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners_white"
            android:elevation="15dp"
            android:gravity="top|start"
            android:hint="Starting Rack"
            android:importantForAutofill="no"
            android:inputType="number"
            android:padding="10dp"
            android:minHeight="48dp"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/edtAddMassLocationsEndingAisle"
            app:layout_constraintStart_toEndOf="@id/addItemScrollableViewStart"
            app:layout_constraintEnd_toStartOf="@id/changeItemScrollableViewEnd" />

        <EditText
            android:id="@+id/edtAddMassLocationsEndingRack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners_white"
            android:elevation="15dp"
            android:gravity="top|start"
            android:hint="Ending Rack"
            android:importantForAutofill="no"
            android:inputType="number"
            android:padding="10dp"
            android:minHeight="48dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/edtAddMassLocationsStartingRack"
            app:layout_constraintStart_toEndOf="@id/addItemScrollableViewStart"
            app:layout_constraintEnd_toStartOf="@id/changeItemScrollableViewEnd" />
        <!--    EditText for Product UPC-->

        <EditText
            android:id="@+id/edtAddMassLocationsStartingLevel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners_white"
            android:elevation="15dp"
            android:hint="Starting Level"
            android:importantForAutofill="no"
            android:inputType="text"
            android:minHeight="48dp"
            android:padding="10dp"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/edtAddMassLocationsEndingRack"
            app:layout_constraintStart_toEndOf="@id/addItemScrollableViewStart"
            app:layout_constraintEnd_toStartOf="@id/changeItemScrollableViewEnd"/>

        <EditText
            android:id="@+id/edtAddMassLocationsEndingLevel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners_white"
            android:elevation="15dp"
            android:hint="Ending Level"
            android:importantForAutofill="no"
            android:inputType="text"
            android:minHeight="48dp"
            android:padding="10dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/edtAddMassLocationsStartingLevel"
            app:layout_constraintStart_toEndOf="@id/addItemScrollableViewStart"
            app:layout_constraintEnd_toStartOf="@id/changeItemScrollableViewEnd"/>


        <!--    Spinner for dropdown menu-->
        <Spinner
            android:id="@+id/spinnerAddMassLocationsZone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners_white"
            android:contentDescription="Category"
            android:elevation="15dp"
            android:importantForAutofill="no"
            android:minHeight="48dp"
            android:padding="10dp"
            android:spinnerMode="dropdown"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/edtAddMassLocationsEndingLevel"
            app:layout_constraintStart_toEndOf="@id/addItemScrollableViewStart"
            app:layout_constraintEnd_toStartOf="@id/changeItemScrollableViewEnd"/>

        <EditText
            android:id="@+id/edtAddMassLocationsLpLimit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners_white"
            android:elevation="15dp"
            android:hint="License Plate Limit"
            android:importantForAutofill="no"
            android:inputType="number"
            android:minHeight="48dp"
            android:padding="10dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/spinnerAddMassLocationsZone"
            app:layout_constraintStart_toEndOf="@id/addItemScrollableViewStart"
            app:layout_constraintEnd_toStartOf="@id/changeItemScrollableViewEnd"/>
        <EditText
            android:id="@+id/edtAddMassLocationsWeight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners_white"
            android:elevation="15dp"
            android:hint="Weight"
            android:importantForAutofill="no"
            android:inputType="number"
            android:minHeight="48dp"
            android:padding="10dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/edtAddMassLocationsLpLimit"
            app:layout_constraintStart_toEndOf="@id/addItemScrollableViewStart"
            app:layout_constraintEnd_toStartOf="@id/changeItemScrollableViewEnd"/>
        <EditText
            android:id="@+id/edtAddMassLocationsHeight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners_white"
            android:elevation="15dp"
            android:hint="Height"
            android:importantForAutofill="no"
            android:inputType="number"
            android:minHeight="48dp"
            android:padding="10dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/edtAddMassLocationsWeight"
            app:layout_constraintStart_toEndOf="@id/addItemScrollableViewStart"
            app:layout_constraintEnd_toStartOf="@id/changeItemScrollableViewEnd"/>
        <EditText
            android:id="@+id/edtAddMassLocationsWidth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners_white"
            android:elevation="15dp"
            android:hint="Width"
            android:importantForAutofill="no"
            android:inputType="number"
            android:minHeight="48dp"
            android:padding="10dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/edtAddMassLocationsHeight"
            app:layout_constraintStart_toEndOf="@id/addItemScrollableViewStart"
            app:layout_constraintEnd_toStartOf="@id/changeItemScrollableViewEnd"/>
        <EditText
            android:id="@+id/edtAddMassLocationsLength"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners_white"
            android:elevation="15dp"
            android:hint="Length"
            android:importantForAutofill="no"
            android:inputType="number"
            android:minHeight="48dp"
            android:padding="10dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/edtAddMassLocationsWidth"
            app:layout_constraintStart_toEndOf="@id/addItemScrollableViewStart"
            app:layout_constraintEnd_toStartOf="@id/changeItemScrollableViewEnd"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAddMassLocationsSubmit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/royal"
            android:elevation="15dp"
            android:padding="12dp"
            android:text="Add Location"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/edtAddMassLocationsLength"
            app:layout_constraintStart_toEndOf="@id/addItemScrollableViewStart"
            app:layout_constraintEnd_toStartOf="@id/changeItemScrollableViewEnd"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="     "
            app:layout_constraintTop_toBottomOf="@id/btnAddMassLocationsSubmit"
            app:layout_constraintStart_toEndOf="@id/addItemScrollableViewStart"
            app:layout_constraintEnd_toStartOf="@id/changeItemScrollableViewEnd"/>


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/changeItemScrollableViewTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/addItemScrollableViewStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".08" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/changeItemScrollableViewEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".92" />



    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>